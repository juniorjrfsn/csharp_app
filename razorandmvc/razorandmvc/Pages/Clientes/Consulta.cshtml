@page
@model razorandmvc.Pages.Clientes.ConsultaModel
@{
    ViewData["Title"] = "Consultas";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<!-- Begin Page Title -->
<div class="pagetitle">
    <h1>Consultas</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "home")</li> 
            <li class="breadcrumb-item active" aria-current="page">Consultas</li>
        </ol>
    </nav>
</div>
<!-- End Page Title -->
<!-- Begin Content -->
<section class="section dashboard">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h1>Consulta</h1>

                    <h4>Consulta</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group"> 
                                    <input class="form-control" name="cpf" id="cpf" value="" />
                                    <span asp-validation-for="clienteModel.Cpf" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="clienteModel.Idade" class="control-label"></label>
                                    <input asp-for="clienteModel.Idade" class="form-control" readonly="readonly" />
                                    <span asp-validation-for="clienteModel.Idade" class="text-danger"></span>
                                </div>

                                
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align: right;">
                                        <div class="form-group">
                                            <button type="submit" value="consultar" class="btn btn-primary" name="btnConsultar" id="btnConsultar">
                                                <i class="fa-solid fa-filter" style="margin-right: 15px;"></i> Consultar
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <input type="hidden" asp-for="clienteModel.ExceptionError" />
                            </form>
                        </div>
                    </div>
                     
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Content -->
<script type="text/javascript">
    $(function (e) {
        console.log($('input[name="clienteModel.ExceptionError"]').val());
        if ($('input[name="clienteModel.ExceptionError"]').val() !== undefined && $('input[name="clienteModel.ExceptionError"]').val() !== '' && $('input[name="clienteModel.ExceptionError"]').val() !== null) {
            Swal.fire({ icon: 'warning', title: 'Atenção', html: $('input[name="clienteModel.ExceptionError"]').val(), timer: 2500 });
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


